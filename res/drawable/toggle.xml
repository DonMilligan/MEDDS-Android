<?xml version="1.0" encoding="utf-8"?>

<!--
By default the toggle button does not change images when clicked. It will follow focus 
and pressed properties like other buttons but the bellow selector changes the image based on
its state.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/green" android:state_checked="true"/>
    <item android:drawable="@drawable/red"/>

</selector>